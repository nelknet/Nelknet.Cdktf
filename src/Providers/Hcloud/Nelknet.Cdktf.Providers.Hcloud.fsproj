<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Nelknet.Cdktf.Providers.Hcloud</RootNamespace>
    <AssemblyName>Nelknet.Cdktf.Providers.Hcloud</AssemblyName>
    <PackageId>Nelknet.Cdktf.Providers.Hcloud</PackageId>
    <Version>0.1.0</Version>
    <Authors>Nelknet</Authors>
    <Company>Nelknet</Company>
    <Description>F# computation expression for the CDKTF provider hetznercloud/hcloud (version 1.54.0).</Description>
    <PackageReleaseNotes>Generated from hetznercloud/hcloud@=1.54.0.</PackageReleaseNotes>
    <PackageTags>cdktf;terraform;fsharp;hcloud</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/nelknet/Nelknet.Cdktf</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/nelknet/Nelknet.Cdktf</PackageProjectUrl>
  </PropertyGroup>
  <PropertyGroup>
    <ProviderId>hcloud</ProviderId>
    <ProviderModule>Hcloud</ProviderModule>
    <ProviderNamespace>Nelknet.Cdktf.Providers.Hcloud</ProviderNamespace>
    <ProviderSource>hetznercloud/hcloud</ProviderSource>
    <ProviderVersion>1.54.0</ProviderVersion>
    <ProviderPackageDir>$(RepoRoot)generated/hcloud</ProviderPackageDir>
    <GeneratedOutputRoot>$(MSBuildProjectDirectory)\Generated</GeneratedOutputRoot>
    <ProviderAssemblyPath>$(ProviderPackageDir)\bin\$(Configuration)\net8.0\hcloud.dll</ProviderAssemblyPath>
  </PropertyGroup>
  <Import Project="$(RepoRoot)build/CodeGen.targets" />
  <ItemGroup>
    <ProjectReference Include="../../Core/Nelknet.Cdktf.Core/Nelknet.Cdktf.Core.fsproj" />
    <!-- Reference the generated provider project -->
    <ProjectReference Include="$(ProviderPackageDir)/hcloud.csproj"
                      Condition="Exists('$(ProviderPackageDir)/hcloud.csproj')"
                      Pack="false" />
    <!-- Ensure CodeGen project is built before running generation -->
    <ProjectReference Include="$(RepoRoot)tools/Nelknet.Cdktf.CodeGen/Nelknet.Cdktf.CodeGen.fsproj"
                      ReferenceOutputAssembly="false"
                      PrivateAssets="all"
                      Pack="false" />
  </ItemGroup>
  <ItemGroup>
    <None Include="../../../README.md" Pack="true" PackagePath="" Link="README.md" />
  </ItemGroup>
  <ItemGroup>
    <None Include="$(ProviderAssemblyPath)"
          Pack="true"
          PackagePath="lib/net8.0/"
          Condition="Exists('$(ProviderAssemblyPath)')" />
    <None Include="$(ProviderPackageDir)\bin\$(Configuration)\net8.0\$(ProviderId).pdb"
          Pack="true"
          PackagePath="lib/net8.0/"
          Condition="Exists('$(ProviderPackageDir)\bin\$(Configuration)\net8.0\$(ProviderId).pdb')" />
  </ItemGroup>
  <!-- Include generated F# files (CodeGen.targets ensures they exist before build) -->
  <ItemGroup>
    <Compile Include="Generated/Resources/**/*.fs" />
    <Compile Include="Generated/$(ProviderModule).Module.fs" />
  </ItemGroup>
  <Target Name="RemoveBundledBindingDependency" AfterTargets="GetPackageDependencies">
    <ItemGroup>
      <PackageDependencies Remove="@(PackageDependencies)"
                           Condition="'%(PackageDependencies.Identity)' == '$(ProviderId)'" />
    </ItemGroup>
  </Target>
</Project>
